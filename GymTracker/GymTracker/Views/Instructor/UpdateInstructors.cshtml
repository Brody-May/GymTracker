@model Instructors

<h2>Update @Model.InstructorID</h2>

@using (Html.BeginForm("UpdateInstructorToDatabase", "Instructors", "Post"))
{
    <input asp-for="InstructorID" type="hidden" value="@Model.InstructorID" />

    <label asp-for="InstructorName" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.InstructorName" />

    <label asp-for="Contact" class="control-label">Contact</label>
    <input type="number" step="0.01" name="Contact" class="form-control" value="@Model.Contact" />

    <input type="submit" value="Update Instructors" class="btn btn-primary" />
}