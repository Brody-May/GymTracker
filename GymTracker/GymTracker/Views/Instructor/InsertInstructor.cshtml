@model Instructors

<h2>Create a New Instructor</h2>

@using (Html.BeginForm("InsertInstructorToDatabase", "Instructors", "Post"))
{
    <input asp-for="InstructorID" type="hidden" value="" />

    <label asp-for="InstructorName" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Contact" class="control-label">Contact</label>
    <input type="number" step="0.01" name="Contact" class="form-control" />

    <div class="form-group">
        <label for="">Select a Focus</label>
        <select class="form-control" name="FocusID" value="">
            @foreach (var foc in Model.Focus)
            {
                <option value="@foc.FocusID">@foc.FocusID @foc.Name</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Instructor" class="btn btn-primary" />
}